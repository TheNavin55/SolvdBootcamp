<mapper namespace = "University.DAO.IDeanDAO">
    <resultMap type = "University.bin.staff.Dean"
               id= "DeanResultMap"   autoMapping="false">
        <id column="id" property="id" />
        <result column = "firstname" property = "firstname"/>
        <result column = "lastname" property = "lastname"/>
        <result column = "age" property = "age"/>

    </resultMap>


    <insert id="saveEntity" useGeneratedKeys="true" keyProperty="true">
        <![CDATA[
            Insert into Deans (firstname,lastname,age) values (#{dean.firstname},#{dean.lastname},#{dean.age})
        ]]>
    </insert>
    <update id="updateEntity">
        <![CDATA[
            Update Deans set firstname=${dean.firstname},lastname=${dean.lastname},age=${dean.age} where id=${dean.id}
        ]]>
    </update>
    <delete id="removeEntity">
        <![CDATA[
            Delete from Dean where id=${dean.id}
        ]]>
    </delete>
    <select id="getEntityById" resultMap="DeanResultMap">
        <![CDATA[
            Select * from Deans where id=${dean.id}
        ]]>
    </select>

</mapper>